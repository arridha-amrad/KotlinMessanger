<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/constraintLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="12dp"
  android:orientation="vertical">

  <TextView
    android:id="@+id/textView_from_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/chat_from_row"
    android:maxWidth="240dp"
    android:padding="16dp"
    android:text="This is my message sdihfoidhsfop dsfsdfsidf dfisdfpsajpas dsfjpadsfjsjhdjkfhds djshfjsdhfsddshfjdshfsd dsjhfkdjshfdshfkdshfadjf jdsfoijdsofja djsfoidjsf"
    app:layout_constraintEnd_toStartOf="@+id/imageView_from_row"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/imageView_from_row"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@android:drawable/btn_star_big_on" />

</androidx.constraintlayout.widget.ConstraintLayout>