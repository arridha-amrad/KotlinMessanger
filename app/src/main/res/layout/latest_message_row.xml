<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linearLayout2"
  android:layout_width="match_parent"
  android:layout_height="120dp"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/imageView_latestmessage"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@android:drawable/btn_star_big_on" />

  <TextView
    android:id="@+id/textView_username_latest_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="Username"
    app:layout_constraintBottom_toTopOf="@+id/textView_latestmessage_latest_message"
    app:layout_constraintStart_toEndOf="@+id/imageView_latestmessage"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

  <TextView
    android:id="@+id/textView_latestmessage_latest_message"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:text="Latest Message"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/imageView_latestmessage"
    app:layout_constraintTop_toBottomOf="@+id/textView_username_latest_message" />
</androidx.constraintlayout.widget.ConstraintLayout>